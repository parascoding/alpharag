# Copy this file to .env and fill in your actual API keys and credentials

# Claude AI API Key (required)
ANTHROPIC_API_KEY=your_claude_api_key_here

# Email configuration (required for notifications)
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_app_password_here  # Use Gmail App Password, not your regular password
EMAIL_TO=recipient@gmail.com

# Optional: Email server settings (defaults to Gmail)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Optional: Alpha Vantage API key for backup market data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here