# Copy this file to .env and fill in your actual API keys and credentials

# =============================================================================
# LLM PROVIDER CONFIGURATION (At least one required)
# =============================================================================

# PRIMARY LLM: Gemini (Google AI) - Recommended (Free tier available)
GEMINI_API_KEY=your_gemini_api_key_here
# Alternative name for Gemini (you can use either)
# GOOGLE_API_KEY=your_google_ai_api_key_here

# FALLBACK LLM 1: OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here
# Alternative name for OpenAI (you can use either)
# GPT_API_KEY=your_openai_api_key_here
# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=your_openai_org_id_here

# FALLBACK LLM 2: Anthropic Claude
ANTHROPIC_API_KEY=your_claude_api_key_here
# Alternative name for Claude (you can use either)
# CLAUDE_API_KEY=your_claude_api_key_here

# LLM Provider Chain Configuration
# Primary LLM provider: 'gemini', 'gpt', or 'claude'
PRIMARY_LLM_PROVIDER=gemini
# Fallback LLM providers (comma-separated, in order of preference)
FALLBACK_LLM_PROVIDERS=gpt,claude

# =============================================================================
# EMAIL CONFIGURATION (Required for notifications)
# =============================================================================

EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_app_password_here  # Use Gmail App Password, not your regular password
EMAIL_TO=recipient1@gmail.com,recipient2@gmail.com,recipient3@gmail.com  # Comma-separated list of recipients

# Optional: Email server settings (defaults to Gmail)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# =============================================================================
# MARKET DATA PROVIDERS (Optional)
# =============================================================================

# Alpha Vantage API key for backup market data and financial fundamentals
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Upstox access token for Indian stock market data
UPSTOX_ACCESS_TOKEN=your_upstox_access_token_here

# Financial Indicators Configuration
# Set to 'true' to use real APIs instead of mock data for financial indicators
USE_REAL_FINANCIAL_APIS=false

# Data Provider Configuration
# Primary data provider: 'upstox', 'alpha_vantage', 'yahoo', or 'mock'
PRIMARY_DATA_PROVIDER=upstox
# Fallback providers (comma-separated): 'upstox', 'alpha_vantage', 'yahoo', 'mock'
FALLBACK_DATA_PROVIDERS=alpha_vantage,mock